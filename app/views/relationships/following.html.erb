<h1>Follow Users</h1>
<% if @followings.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>iamge</th>
        <th>name</th>
      </tr>
    </thead>
    <tbody>
      <% @followings.each do |following| %>
        <tr>
          <td><%= image_tag following.get_profile_image(80, 80) %></td>
          <td><%= following.name %></td>
          <td>フォロー数:<%= following.followings.count %></td>
          <td>フォロワー数:<%= following.followers.count %></td>
          <td><%= link_to "Show", user_path(following) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  ユーザーはいません
<% end %>