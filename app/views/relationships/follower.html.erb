<h1>Follower Users</h1>
<% if @followers.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>iamge</th>
        <th>name</th>
      </tr>
    </thead>
    <tbody>
      <% @followers.each do |follower| %>
        <tr>
          <td><%= image_tag follower.get_profile_image(80, 80) %></td>
          <td><%= follower.name %></td>
          <td>フォロー数:<%= follower.followings.count %></td>
          <td>フォロワー数:<%= follower.followers.count %></td>
          <td><%= link_to "Show", user_path(follower) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  ユーザーはいません
<% end %>