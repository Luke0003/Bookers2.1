<div class="container">
  <div class="row">
    <%= render "users/user_info", book: Book.new, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(100, 100) %><br>
              <% end %>
              <%= link_to @user.name, user_path(@user) %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <td><%= render "favorites/favorite", book: @book %></td>
            <td>コメント数:<%= @book.book_comments.count %></td>
            <% if @book.user_id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-sm" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger btn-sm", "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <table>
        <tbody>
          <% @book.book_comments.each do |book_comment| %>
            <tr>
              <td>
                <p><%= image_tag book_comment.user.get_profile_image(80, 80) %></p>
                <%= book_comment.user.name %>
              </td>
              <td><%= book_comment.comment %></td>
              <td><%= link_to "destroy", book_book_comment_path(@book, book_comment), method: :delete, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= form_with model: [@book, @book_comment] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, rows: "5", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "送信" %>
        </div>
      <% end %>
    </div>
  </div>
</div>